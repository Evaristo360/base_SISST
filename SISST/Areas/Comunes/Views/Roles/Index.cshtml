@model IEnumerable<SISST.ViewModels.Comunes.Roles.VMRol>
@{ ViewData["Title"] = "Roles de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="card card-default ">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h3 class="pl-3">@ViewData["Title"]</h3>
                <ol class="breadcrumb mb-0 " style="background-color:white;">
                    <li class="breadcrumb-item active">
                        Lista de roles
                    </li>
                </ol>
            </div>
            <div class="col-4 text-right mt-3">
                @Html.ActionLink("Nuevo rol", "Create", "Roles", new { Area = "Comunes" }, new { @class = "btn btn_sistema" })
            </div>
        </div>
    </div>
</div>

<div class="card card-default ">
    <h4 class="card-header">
        Lista de roles
    </h4>
    <div class="card-body">
        <table class="table table-striped my-4 w-100 border-gray border dataTables-example">
            <thead>
                <tr>
                    <th>
                        Rol
                    </th>
                    <th>
                        @Html.DisplayName("Descripción")
                    </th>
                    <th>
                        @Html.DisplayName("Prioridad")
                    </th>
                    <th>
                        @Html.DisplayName("Estatus")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Roles", new { Area = "Comunes", id= @item.id } )">@item.Name</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prioridad)
                        </td>
                        <td>
                            @if (item.activo)
                            {
                                @Html.Label("Activo")
                            }
                            else
                            {
                                @Html.Label("Inactivo")
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

    @section Styles {
            <link rel="stylesheet" href="~/css/datatable.css" />
    }

    @section Scripts {
            <script src="~/js/datatable.js"></script>

            <script>
            $(document).ready(function () {
                if ('@TempData["tipoMensaje"]' != "") {
                    toastr.options.positionClass = 'toast-bottom-right';
                toastr['@TempData["tipoMensaje"]']('@TempData["mensaje"]');
                }
            });
            </script>
    }










